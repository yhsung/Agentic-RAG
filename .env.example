# Ollama Configuration
# Auto-detects DevContainer/Codespaces vs localhost using environment variables:
# - Set DEVCONTAINER=true or CODESPACES=true for containerized environments
# - Local: Uses localhost by default
# Override by setting OLLAMA_BASE_URL environment variable
OLLAMA_BASE_URL=http://localhost:11434
EMBEDDING_MODEL=nomic-embed-text
GENERATION_MODEL=qwen3:30b
GRADING_MODEL=qwen3:30b

# ChromaDB Configuration
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_COLLECTION=agentic_rag

# Retrieval Settings
RETRIEVAL_K=4
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_RETRIES=3

# Web Search (Optional - leave empty if not using)
TAVILY_API_KEY=

# Logging
LOG_LEVEL=INFO
VERBOSE=false
